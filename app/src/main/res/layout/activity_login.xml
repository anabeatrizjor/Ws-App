<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/poppins_bold"
                android:textSize="30sp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="50dp"/>


            <EditText
                android:id="@+id/userInputlLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="UsuÃ¡rio"
                android:inputType="textPersonName"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/textViewLogin"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <EditText
                android:id="@+id/senhaInputLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/userInputlLogin"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/backgroundColor"
                android:layout_below="@+id/senhaInputLogin"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <Button
                android:id="@+id/buttonCadastroLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/backgroundColor"
                android:layout_below="@+id/buttonLogin"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>