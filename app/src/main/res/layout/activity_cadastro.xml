<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:fontFamily="@font/poppins_bold"
                android:textSize="30sp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/nomeInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/textViewCadastro"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <EditText
                android:id="@+id/userInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="UsuÃ¡rio"
                android:inputType="textPersonName"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/nomeInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <EditText
                android:id="@+id/senhaInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/userInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <EditText
                android:id="@+id/senhaConfirmInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Confirmar senha"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_italic"
                android:background="@drawable/border_selector"
                android:padding="10dp"
                android:layout_below="@+id/senhaInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>


            <Button
                android:id="@+id/buttonCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:layout_below="@+id/senhaConfirmInputCadastro"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/backgroundColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:id="@+id/backArrowCadastro"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/previous_arrow"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>